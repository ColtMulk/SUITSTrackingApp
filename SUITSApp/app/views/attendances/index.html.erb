<div class='main'>
  <main class='content'>
    <div class='col-md-12 center-items'>
      <div class='card center-items'>
        <div class='card-header'>
          <h2> Attendances </h2>
        </div>
      </div>
      <div class='table-responsive'>
        <table class="table table-hover">
          <tr class="header">
            <th>User Name</th>
            <th>User ID</th>
            <th>Event name <%= link_to "\u25BC", sort: "desc", name: "EventName" %> <%= link_to "\u25B2", sort: "asc", name: "EventName" %> </th>
            <th>Event ID</th>
            <th>Action</th>
          </tr>
          <% @attendances.each do |attendance| %>
          <tr>
            <% puts @attendance.inspect %>
            <% if attendance.user_info then %>
              <td><%= attendance.user_info.first_name + " " + attendance.user_info.last_name %></td>
            <% else %>
              <td> No name found </td>
            <% end %>
            <td><%= attendance.user.id %></td>
            <td><%= attendance.events.event_name  %></td>
            <td><%= attendance.events_id %></td>
            <td class = actions>
              <%= link_to("Delete", delete_attendance_path(attendance), :class => 'action delete') %>
            </td>
          </tr>

          <% end %>
        </table>
      </div>
    </div>
  </main>
</div>
