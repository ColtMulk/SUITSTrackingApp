<p id="notice"><%= notice %></p>
<div class='main'>
  <main class='content'>
    <div class='col-md-6 center-items'>
      <div class='card'>
        <div class='card-header'>
          <h1>Event Types</h1>
        </div>
        <div class='card-body'>
          <%= link_to 'New Event Type', new_event_type_path %>
          <div class='table-responsive'>
            <table class='table table-hover table-striped'>
              <thead class='header'>
                <tr>
                  <th>Name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @event_types.each do |event_type| %>
                  <tr>
                    <td><%= event_type.name %></td>
                    <td><%= link_to 'Edit', edit_event_type_path(event_type) %></td>
                    <td><%= link_to 'Destroy', event_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>




