<div class='main'>
  <main class='content'>
    <div class='col-md-6 center-items'>
      <div class='card center-items'>
        <div class='card-header'>
          <h2>Edit Event</h2>
        </div>
        <div class='card-body'>
          <%= form_for(@event) do |e| %>
            <table>
              <tr>
                <th>Event Name</th>
                <td><%= e.text_field(:event_name)%></td>
              </tr>
              <tr>
                <th>Event Location</th>
                <td><%= e.text_field(:location)%></td>
              </tr>
              <tr>
                <th>Event Date</th>
                <td><%= e.datetime_select(:date, {ampm: true, minute_step: 15, order: [:month, :day, :year, :hour, :minute]}) %></td>
              </tr>
              <tr>
                <th>Event description</th>
                <td><%= e.text_field(:event_description)%></td>
              </tr>
              <tr>
                <th>Event Passcode</th>
                <td><%= e.text_field(:passcode)%></td>
              </tr>
              <tr>
                <th>Event Open</th>
                <td><%= e.check_box(:is_open) %></td>
              </tr>
              <tr>
                <th>Event Type</th>
                <td> <%= e.collection_select(:event_type_id, EventType.all, :id, :name)%> </td>
              </tr>
            </table>

            <div class="form-buttons">
              <%= e.submit("Update Event") %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
