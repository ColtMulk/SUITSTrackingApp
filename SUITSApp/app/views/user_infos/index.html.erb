<p id="notice"><%= notice %></p>

<h1>User Infos</h1>

<%= if current_user.gen_member?
  redirect_to "dashboard", dashboard_index_path end
%>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Member status</th>
      <th colspan="3"></th>
      <th>Log Attendance</th>
    </tr>
  </thead>

  <tbody>
    <% @user_infos.each do |user_info| %>
      <tr>
        <td><%= user_info.first_name %></td>
        <td><%= user_info.last_name %></td>
        <td><%= user_info.member_status %></td>
        <td><%= link_to 'Show', user_info %></td>
        <td><%= link_to 'Edit', edit_user_info_path(user_info) %></td>
        <td><%= link_to 'Destroy', user_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add Attendance', select_event_path(user_info) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Info', new_user_info_path %>
