<div class='main'>
  <main class='content'>
    <div class='col-md-12 center-items'>
      <div class='card center-items'>
        <div class='card-header'>
          <h1>User Infos</h1>

          <%= if current_user.user_info.gen_member?
            controller.redirect_to dashboard_index_path end
          %>
        </div>
        <div class='table-responsive'>
          <table class='table table-hover table-striped'>
            <thead class="header">
              <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Member status</th>
                <th>Member category</th>
                <th>User Attendance</th>
                <th colspan="2"></th>
                <th>Log Attendance</th>
              </tr>
            </thead>

            <tbody>
              <% @user_infos.each do |user_info| %>
                <tr>
                  <td><%= user_info.first_name %></td>
                  <td><%= user_info.last_name %></td>
                  <td><%= user_info.member_status %></td>
                  <% if user_info.member_category == nil %>
                    <td>N/A</td>
                  <% else %>
                    <td><%= user_info.member_category.name %></td>
                  <% end %>
                  <td><%= link_to 'View Attendance', user_attendance_path(user_info) %></td>
                  <td><%= link_to 'Show', user_info %></td>
                  <td><%= link_to 'Edit', edit_user_info_path(user_info) %></td>
                  <td><%= link_to 'Add Attendance', select_event_path(user_info) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</div>
