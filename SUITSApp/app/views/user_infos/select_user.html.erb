<p id="notice"><%= notice %></p>

<h1>User Infos</h1>
<noscript>
  there is no javascript
</noscript>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Member status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_infos.each do |user_info| %>
      <tr>
        <td><%= user_info.first_name %></td>
        <td><%= user_info.last_name %></td>
        <td><%= user_info.member_status %></td>

        <td><%= button_to("Log Attendance", attendances_path(:attendance => {:events_id => @event.id, :users_id => user_info.id, :events_passcode => @event.passcode, :passcode => @event.passcode}), :method => :post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Info', new_user_info_path %>
