<div class='main'>
  <main class='content'>
    <div class='col-md-4 center-items'>
      <div class='card center-items'>
        <div class='card-body'>
          <p id="notice"><%= notice %></p>

          <h1>My Profile</h1>

          <p>
            <strong>Email:</strong>
            <%= current_user.email %>
          </p>

          <p>
            <strong>First name:</strong>
            <%= @user_info.first_name %>
          </p>

          <p>
            <strong>Last name:</strong>
            <%= @user_info.last_name %>
          </p>

          <p>
            <strong>Member status:</strong>
            <%= @user_info.member_status %>
          </p>

          <p>
            <strong>Member Category:</strong>
            <% if @user_info.member_category %>
              <%= @user_info.member_category.name %>
            <% else %>
              None
            <% end %>
          </p>

          <%= link_to 'Edit', edit_user_info_path(@user_info) %> 
        </div>
      </div>
    </div>
  </main>
</div>
